<div class="main">
    <div class="container">
        <div class="blog">
	       <%= form_for(@post) do |f| %>
              <p>
                <%= f.label :title %><br />
                <%= f.text_field :title %>
               </p>
              
               <p>
                <%= f.label :body %><br />
                <%= f.text_area :body %>
               </p>
               
               <p>
                <%= f.submit 'Post', :class => 'btn-lg newpost' %>
               </p>
            <% end %>
        </div>
    </div>
</div>